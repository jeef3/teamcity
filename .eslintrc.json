{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "extends": "eslint:recommended",

  "env": {
    "node": true
  },

  "rules": {
    "indent": [ 2, 2 ],
    "quotes": [ 2, "single" ],
    "semi": [ 2, "always" ],
    "object-curly-spacing": [2, "always"],
    "array-bracket-spacing": [2, "never"],
    "no-console": 1
  }
}
